var
    counter = 0;
    result = 10;
    max = 100;
    a;

    
    // Testing basic arithmetic
    result = (result * 2) + (max / 4);
    write("Result: ");
    write(result);
    
    // Testing if-else
    if (result > 50){
        write("Result is greater than 50");
    }
    else {
        write("Result is less than or equal to 50");
    }
    
    // Testing while loop
    while (counter < 5){
        write("Counter: ");
        write(counter);
        counter ++;
    }
    
    // Testing for loop
    for (i = 0; i < 3; i++){
        write("For loop iteration: ");
        write(i);
    }
    
    // Testing read
    a = read("Enter a number: ");
    
    // Testing compound conditions
    if (a > 0 && a < 10){
        write("Number is between 0 and 10");
    }
    
    // Testing multiple operations
    result = result + a * counter - max / 2;
    write("Final result: ");
    write(result);
